<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User Preferences"
        android:id="@+id/textView3" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="First Name"
        android:id="@+id/textView4"
        android:layout_marginTop="71dp" android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" android:text="Last Name"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/edtLastName" android:layout_alignEnd="@+id/textView4"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtFirstName" android:layout_alignTop="@+id/textView4"
        android:layout_alignStart="@+id/textView3" android:layout_alignParentEnd="true"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/edtLastName"
        android:layout_below="@+id/edtFirstName" android:layout_alignStart="@+id/edtFirstName"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>